<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:LTBLApplication.Controls;assembly=LTBLApplication"
             x:Class="LTBLApplication.Views.MainMenu"
             Title="mainMenu"
             BackgroundColor="White"
             >
  <ListView x:Name="Menu">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout WidthRequest="1">
            <ContentView Padding="50,10,0,0">
              <controls:FontLabel Text="{Binding}" TextColor="Black"/>
            </ContentView>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>